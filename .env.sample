# MongoDB Configuration
# Connection string for MongoDB Atlas or local MongoDB instance
# IMPORTANT: If your password contains special characters (!@#$%^&*), you MUST URL-encode them
# Example: password "p@ss!" should be encoded as "p%40ss%21"
# Use Python to encode: python -c "import urllib.parse; print(urllib.parse.quote_plus('your_password'))"
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/

# Database name (default: zava)
MONGODB_DATABASE=zava

# MongoDB Atlas Project ID (optional, for Atlas CLI/API operations)
MONGODB_ATLAS_PROJECT_ID=your_project_id_here

# Ditto Configuration
# Your Ditto application ID from Ditto Cloud Portal
DITTO_APP_ID=your_ditto_app_id_here

# Ditto API key for authentication
DITTO_API_KEY=your_ditto_api_key_here

# Ditto Cloud endpoint (default: https://cloud.ditto.live)
DITTO_CLOUD_ENDPOINT=https://cloud.ditto.live

# Azure OpenAI Configuration (for embeddings generation)
# Your Azure OpenAI resource endpoint
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Azure OpenAI API key
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Deployment name for text embeddings model (typically: text-embedding-3-small)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# API version for Azure OpenAI (recommended: 2024-02-01)
AZURE_OPENAI_API_VERSION=2024-02-01

# Data Generation Settings
# Number of customers to generate (default: 25000)
NUM_CUSTOMERS=25000

# Number of orders to generate (default: 100000)
NUM_ORDERS=100000

# Date range for order generation (3 years)
START_DATE=2022-12-09
END_DATE=2025-12-09

# Optional: Local MongoDB (for development/testing)
# Use this for local MongoDB instance instead of Atlas
# MONGODB_LOCAL_CONNECTION_STRING=mongodb://localhost:27017/

# Optional: Batch sizes for data generation (performance tuning)
# BATCH_SIZE_CUSTOMERS=1000
# BATCH_SIZE_ORDERS=5000
# BATCH_SIZE_EMBEDDINGS=100

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
